    }   
<#}#>	

 public class Message<T> where T : class, new()
    {
	    /// <summary>
        /// 提示信息，操作成功或失败
        /// </summary>
        public string message { get; set; }
	    /// <summary>
        /// true或者false，
        /// </summary>
        public string success { get; set; }
		 /// <summary>
        /// list<T> 数据列表
        /// </summary>
        public List<T> rows { get; set; }
		 /// <summary>
        /// T  单条数据
        /// </summary>
        public T row { get; set; }
		 /// <summary>
        /// 总数
        /// </summary>
        public Int64 total { get; set; }
    }
}