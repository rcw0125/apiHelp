        /// <returns>message消息</returns>	
		[Route("update")]
        [HttpGet]
		public  Message<<#=entity.Name#>> update(string sql)
        { 
		     
		    try
            {			   
                db.Database.ExecuteSqlCommand(sql);				  
				Message<<#=entity.Name#>> ms=new Message<<#=entity.Name#>>();				
				ms.success="true";
				ms.message="操作成功";
                return ms;				
            }
            catch (Exception ex)
            {  
			    Message<<#=entity.Name#>> ms=new Message<<#=entity.Name#>>();
				ms.success="false";
				ms.message="操作失败，"+ex.Message;
                return ms;
